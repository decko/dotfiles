export LC_ALL=en_US.UTF-8

# Load our user defined functions.
[ -f ~/.functions ] && source ~/.functions

# Load gh completion
[ -d ~/.functions.d ] && source ~/.functions.d/gh_completion

# Load our user defined aliases.
[ -f ~/.aliases ] && source ~/.aliases

